<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/black_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.TextInputLayout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:backgroundTint="@color/black_20"
            android:textColor="@color/black_20"
            android:hint="Enter Animal Id"
            android:id="@+id/edit_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/android_material_spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Select a search category"
        app:met_floatingLabel="normal" />

    <Button
        android:id="@+id/btn_add_search"
        android:background="@drawable/round_button_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:padding="12dp"
        android:text="GO"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/recycler_view"
        />

</LinearLayout>