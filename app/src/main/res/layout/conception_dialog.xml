<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/rootView"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        tools:context=".activities.DemoActivity">


        <LinearLayout

            android:orientation="vertical"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <EditText android:id="@+id/cow_name_conception"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_20"
                    android:inputType="text"
                    android:hint="Animal Id" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <EditText android:id="@+id/calving_date_conception"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_20"
                    android:inputType="date"
                    android:hint="Conception date"/>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/text_calving"
                android:text="Calving date"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_add_conception"
                android:background="@drawable/round_button_bg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:layout_gravity="end"
                android:padding="12dp"
                android:text="Add"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>