<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:contentPadding="20dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:src="@color/black_20" />


    <RelativeLayout
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_one"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/record_cat_one"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_speaker_notes_black_36dp"
                app:civ_border="true"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/primary"
                app:civ_shadow_radius="0.0"
                />


        <TextView
            android:id="@+id/category_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="sample"
            android:textStyle="bold"
            android:textSize="18sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/record_cat_two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_speaker_notes_black_36dp"
                app:civ_border="true"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/primary"
                app:civ_shadow_radius="0.0"
                />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/category_two"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="sample"
            android:textStyle="bold"
            android:textSize="18sp"/>

        </LinearLayout>

    </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:src="@color/black_20" />


        <RelativeLayout
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_three"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/record_cat_three"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_speaker_notes_black_36dp"
                    app:civ_border="true"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/primary"
                    app:civ_shadow_radius="0.0"
                    />

            <TextView
                android:id="@+id/category_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="sample"
                android:textStyle="bold"
                android:textSize="18sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_four"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/record_cat_four"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_speaker_notes_black_36dp"
                    app:civ_border="true"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/primary"
                    app:civ_shadow_radius="0.0"
                    />

            <TextView
                android:id="@+id/category_four"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="sample"
                android:textStyle="bold"
                android:textSize="18sp"/>


            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:src="@color/black_20" />


    </LinearLayout>

</android.support.v7.widget.CardView>